.container {
  background-color: #fff;
  padding-bottom: 100rpx;
}
.top {
  background-color: #F5F5F5;
  border-radius: 0 0 80rpx 80rpx;
  height: 300rpx;
  padding: 40rpx;
  display: flex;
}
.top .left {
  width: 400rpx;
  height: 100rpx;
}
.top .left .title {
  display: block;
  font-size: 40rpx;
  color: #000;
  line-height: 70rpx;
}
.top .left .sign {
  font-size: 28rpx;
  line-height: 30rpx;
  color: #ccc;
}
.top .right {
  margin-left: 150rpx;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
}
.nav {
  padding: 40rpx 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.nav .item {
  width: 180rpx;
  height: 100rpx;
  margin-right: 30rpx;
  text-align: center;
}
.nav .item .nav-icon {
  font-size: 40rpx;
  line-height: 50rpx;
}
.nav .item text {
  font-size: 24rpx;
  line-height: 50rpx;
}
.today {
  padding: 40rpx 20rpx;
}
.today .flag {
  background-color: #000;
  padding: 10rpx 25rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
}
.today .main {
  background-color: #000;
  padding: 10rpx 40rpx;
  margin-top: 5rpx;
}
.today .main .content {
  background-color: #2c2c2c;
  border-radius: 20rpx;
  padding: 20rpx;
  color: #fff;
}
.today .main .content .title {
  height: 40rpx;
  padding: 5rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: flex;
}
.today .main .content .title .left {
  margin-right: 10rpx;
}
.today .main .content .title .right {
  margin-left: 400rpx;
}
.today .main .content .tj {
  margin-top: 30rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}
.today .main .content .tj .item {
  width: 120rpx;
  height: 120rpx;
  line-height: 50rpx;
  background-color: #3C302D;
  border-radius: 10rpx;
  margin-right: 20rpx;
  padding: 20rpx;
}
.today .main .content .tj .item .type {
  font-size: 24rpx;
  display: block;
}
.today .main .content .tj .item .time {
  font-size: 30rpx;
}
.today .main .content .tj .item .time2 {
  font-size: 20rpx;
}
.rj {
  margin: 20rpx;
}
.rj .flag {
  background-color: #000;
  padding: 10rpx 25rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
}
.rj .main {
  height: 300rpx;
  border: 1px solid #000;
  margin-top: 5rpx;
}

