.container {
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container .title {
  margin-top: 100rpx;
  text-align: center;
}
.container .title text {
  font-size: 50rpx;
  font-weight: bold;
  color: #000;
}
.container .part-between {
  margin-top: 50rpx;
}
.container .desc {
  text-align: center;
}
.container .desc text {
  color: #ccc;
  font-size: 24rpx;
}
.container .login-style {
  display: flex;
  justify-content: center;
}
.container .login-style .wx {
  width: 150rpx;
  height: 80rpx;
  text-align: center;
}
.container .login-style .wx .style-icon {
  font-size: 50rpx;
  line-height: 50rpx;
}
.container .login-style .wx text {
  font-size: 24rpx;
  line-height: 30rpx;
}
.container .login-style .qq {
  width: 150rpx;
  height: 80rpx;
  text-align: center;
}
.container .login-style .qq .style-icon {
  font-size: 40rpx;
  line-height: 50rpx;
}
.container .login-style .qq text {
  font-size: 24rpx;
  line-height: 30rpx;
}
.container .xy {
  margin-top: 250rpx;
  font-size: 24rpx;
  line-height: 20rpx;
  color: #ccc;
  text-align: center;
}
.container .xy .xy-text {
  font-size: 28rpx;
  text-decoration: underline;
  margin-left: 10rpx;
}

